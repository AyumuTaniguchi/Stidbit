<% if user_signed_in? && tidbit.like_user(current_user.id) %>
  <%= link_to "/likes/#{tidbit.id}/destroy", method: :post, class: "like-button", remote: true do %>
    <%= image_tag("icon_red_heart.png") %>
  <% end %>
<% elsif user_signed_in? %>
  <%= link_to "/likes/#{tidbit.id}/create", method: :post, class: "like-button", remote: true do %>
    <%= image_tag("icon_heart.png") %>
  <% end %>
<% else %>
  <%= image_tag("icon_heart.png") %>
<% end %>

